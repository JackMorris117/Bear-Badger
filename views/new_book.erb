<h2>Upload Book</h2>

<form method="POST" action="/BearAndBadger/new-book">
  <div class="form-wrapper">
    
    <div class="form-el">
      <label for="name"style="background-color: lightblue">Title:</label>
      <input type="text" name="name" id="name"/>
    </div>

    <div class="form-el">
      <label for="author"style="background-color: lightblue">Author:</label>
      <input type="text" name="author" id="author"/>
    </div>

    <div class="form-el">
      <label for="publisher_select"style="background-color: lightblue">Publisher:</label> 
      <select name="publisher_id" id="publisher_select">
        <% @publishers.each do |publisher| %>
            <option value=<%= publisher.id %>><%= publisher.name%></option>
        <% end %>
      </select>
    </div>

     <div class="form-el">
      <label for="genre_select"style="background-color: lightblue">Genre:</label> 
      <select name="genre_id" id="genre_select">
        <% @genres.each do |genre| %>
            <option value=<%= genre.id %>><%= genre.name %></option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="buying_cost"style="background-color: lightblue">Cost:</label>
      <input type="number" step="0.01" name="buying_cost" id="buying_cost"/>
    </div>

    <div class="form-el">
      <label for="price"style="background-color: lightblue">Price:</label>
      <input type="number" step="0.01" min = 0 name="price" id="price"/>
    </div>

    <div class="form-el">
      <label for="stock"style="background-color: lightblue">Stock:</label>
      <input type="number" min = 0 name="stock" id="stock"/>
    </div>

    <div class="form-el">
      <label for="description"style="background-color: lightblue">Description:</label><br>
      <textarea rows="4" cols="50" name="description"></textarea>
    </div>


    <div class="form-el">
      <input type="submit" value="Add Book to System"/>
    </div>

  </div>
</form>