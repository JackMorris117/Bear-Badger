<h2>Edit Book:   <%= @book.name %></h2>
<form method="POST" action="/BearAndBadger/books/ <%= @book.id %>">
  <div class="form-wrapper">
    
    <div class="form-el">
      <label for="name"style="background-color: lightblue">Title:</label>
      <input type="text" name="name" id="name" value="<%= @book.name %>"/>
    </div>

    <div class="form-el">
      <label for="author"style="background-color: lightblue">Author:</label>
      <input type="text" name="author" id="author" value="<%= @book.author %>"/>
    </div>

    <div class="form-el">
      <label for="publisher_select"style="background-color: lightblue">Select Publisher:</label> 
      <select name="publisher_id" id="publisher_select" selected="<%= @book.publisher_id  %>">
        <% @publishers.each do |publisher| %>
          <% if publisher.id == @book.publisher_id %>
            <option value=<%= publisher.id %> selected><%= publisher.name.capitalize %></option>
          <% else %>
            <option value=<%= publisher.id %>><%= publisher.name.capitalize %></option>
          <% end %>
        <% end %>
      </select>
    </div>


    <div class="form-el">
      <label for="genre_select"style="background-color: lightblue">Select Genre:</label> 
      <select name="genre_id" id="genre_select" selected="<%= @book.genre_id  %>">
        <% @genres.each do |genre| %>
          <% if genre.id == @book.genre_id %>
            <option value=<%= genre.id %> selected><%= genre.name.capitalize %></option>
          <% else %>
            <option value=<%= genre.id %>><%= genre.name.capitalize %></option>
          <% end %>
        <% end %>
      </select>
    </div>

     <div class="form-el">
      <label for="buying_cost"style="background-color: lightblue">Buying Cost:</label>
      <input type="number" min = 0  step="0.01" name="buying_cost" id="buying_cost" value="<%= @book.buying_cost %>"/>
    </div>

    <div class="form-el">
      <label for="price"style="background-color: lightblue">Price:</label>
      <input type="number" min = 0  step="0.01" name="price" id="price" value="<%= @book.price %>"/>
    </div>


    <div class="form-el">
      <label for="stock"style="background-color: lightblue">Stock:</label>
      <input type="number" min = 0 name="stock" id="stock" value="<%= @book.stock %>"/>
    </div>


    <div class="form-el">
      <label for="description"style="background-color: lightblue">Description:</label><br>
      <textarea rows="4" cols="50" name="description"><%= @book.description %></textarea>
    </div>


    <div class="form-el">
      <input type="submit" value="Finish Edit"/>
    </div>

  </div>
</form>